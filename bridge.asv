%Send Matlab data to Arduino  

% Arduino->tools -> port and the baud rate (9600)
arduino = serial('/dev/cu.usbserial-DN01ESPV','BaudRate',9600);

%Open arduino USB port

fopen(arduino);


for theta = 0:pi/16:10*pi
    [alpha1, alpha2, alpha3] = plotRobot([cos(theta); sin(theta); 3], 4)
    
    fprintf(arduino,'%s:%s:%s',char(alpha1),char(alpha2), char(alpha3));
    pause(0.1);
    fclose(arduino);
end